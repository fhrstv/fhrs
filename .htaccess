RewriteEngine On

# إذا كان الطلب ليس لملف حقيقي أو دليل حقيقي
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# إزالة الشرطات من العنوان
RewriteRule ^(.*)-(.*)$ $1$2 [N]

# إعادة كتابة العنوان لإزالة .html إذا كان موجودًا
RewriteRule ^(.*)\.html$ $1 [NC,L]

# التعامل مع الروابط بدون شرطات وبدون .html
RewriteRule ^([^/]+)/?$ $1.html [NC,L]




RewriteEngine On
RewriteRule ^watch/movies/([^-]+)-([^-]+)-([^-]+)-([^-]+)$ watch/movies/$1 $2 $3 $4 [L,R=301]