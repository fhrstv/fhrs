RewriteEngine On

# إذا كان الطلب ليس لملف حقيقي أو دليل حقيقي
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# إعادة كتابة العنوان لإضافة .html إذا لم يكن موجودًا
RewriteRule ^([^\.]+)$ $1.html [NC,L]


<Files "random.js">
    Order Allow,Deny
    Deny from all
    ErrorDocument 404 /404.html
</Files>